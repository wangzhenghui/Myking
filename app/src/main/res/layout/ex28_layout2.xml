<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/studPic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/studPic"
        android:layout_alignTop="@+id/studPic"
        android:id="@+id/studName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/studPic"
        android:layout_alignParentRight="true"
        android:id="@+id/studAge"/>
    <TextView
        android:id="@+id/tianjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="添加"
        android:textSize="16dp"
        android:textColor="#1473df"
        android:paddingRight="16dp"
        android:onClick="insert"/>
    <TextView
        android:id="@+id/shanchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tianjia"
        android:text="删除"
        android:textColor="#1473df"
        android:textSize="16dp"
        android:paddingRight="16dp"
        android:onClick="delete"/>
    <TextView
        android:id="@+id/gengxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/shanchu"
        android:text="更新"
        android:textColor="#1473df"
        android:textSize="16dp"
        android:paddingRight="16dp"
        android:onClick="update"/>
</RelativeLayout>